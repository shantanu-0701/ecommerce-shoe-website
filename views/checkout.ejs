<%- include('./partials/head2') %>

<div class="w-full min-h-[80vh] px-6 lg:px-20 py-10 bg-gradient-to-br from-green-50 to-white">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-4xl font-bold text-green-700 mb-8">Checkout</h1>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            
            <!-- Order Summary -->
            <div class="lg:col-span-1 bg-white p-6 rounded-xl shadow-md order-last lg:order-first">
                <h2 class="text-2xl font-semibold text-green-600 border-b pb-3 mb-4">Order Summary</h2>
                
                <% if(user && user.cart.length > 0) { %>
                    <div class="space-y-4 mb-6">
                        <% let total = 0; %>
                        <% user.cart.forEach(item => { %>
                            <% total += item.price; %>
                            <div class="flex justify-between items-center text-gray-600">
                                <span><%= item.name %></span>
                                <span class="font-medium">₹ <%= item.price %></span>
                            </div>
                        <% }) %>
                    </div>
                    <div class="border-t pt-4 flex justify-between items-center font-bold text-lg text-gray-800">
                        <span>Total</span>
                        <span>₹ <%= total %></span>
                    </div>
                <% } else { %>
                    <p class="text-gray-500">Your cart is empty.</p>
                <% } %>
            </div>

            <!-- Shipping & Payment Form -->
            <div class="lg:col-span-2 bg-white p-8 rounded-xl shadow-md">
                <form action="/checkout" method="POST">
                    <!-- Shipping Information -->
                    <h2 class="text-2xl font-semibold text-green-600 mb-6">Shipping Information</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                            <input type="text" name="name" id="name" class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" required>
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                            <input type="email" name="email" id="email" class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" required>
                        </div>
                        <div class="md:col-span-2">
                            <label for="address" class="block text-sm font-medium text-gray-700 mb-1">Street Address</label>
                            <input type="text" name="address" id="address" class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" required>
                        </div>
                        <div>
                            <label for="city" class="block text-sm font-medium text-gray-700 mb-1">City</label>
                            <input type="text" name="city" id="city" class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" required>
                        </div>
                        <div>
                            <label for="zip" class="block text-sm font-medium text-gray-700 mb-1">ZIP / Postal Code</label>
                            <input type="text" name="zip" id="zip" class="w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" required>
                        </div>
                    </div>

                    <!-- Payment Details (Mockup) -->
                    <h2 class="text-2xl font-semibold text-green-600 mb-6">Payment Details</h2>
                    <p class="text-gray-500 mb-6">Payment processing is not implemented in this demo.</p>

                    <button type="submit" class="w-full bg-green-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-600 transition-colors shadow-md">
                        Place Order
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>