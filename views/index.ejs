<%- include('./partials/header') %>

<% if(success && success.length > 0) { %>
  <div class="fixed top-6 left-1/2 -translate-x-1/2 bg-green-500 text-white text-center py-3 px-6 rounded-lg shadow-lg animate-fade-in-down">
    <%= success %>
  </div>
<% } %>

<% if(error && error.length > 0) { %>
  <div class="fixed top-6 left-1/2 -translate-x-1/2 bg-red-500 text-white text-center py-3 px-6 rounded-lg shadow-lg animate-fade-in-down">
    <%= error %>
  </div>
<% } %>

<div class="w-full min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 via-white to-green-100 px-6 py-12">
  
  <div class="w-full max-w-6xl grid md:grid-cols-2 gap-8">

    <div class="p-10 bg-gradient-to-br from-green-100 to-green-50 rounded-2xl shadow-xl border border-green-200 flex flex-col justify-center">
      <h3 class="text-4xl font-bold mb-3 text-green-700 tracking-tight">
        Welcome to <span class="text-green-600">SoleMate</span>
      </h3>
      <p class="text-gray-600 mb-8 text-lg">Join us and step into style ðŸš€</p>
      <form autocomplete="off" action="/users/register" method="post" class="space-y-5">
        <input class="w-full bg-white/50 border border-green-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-400 transition" type="text" placeholder="Full Name" name="fullname" required>
        <input class="w-full bg-white/50 border border-green-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-400 transition" type="email" placeholder="Email" name="email" required>
        <input class="w-full bg-white/50 border border-green-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-400 transition" type="password" placeholder="Password" name="password" required>
        <button class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-xl shadow-md transition transform hover:scale-[1.02]">
          Create My Account
        </button>
      </form>
    </div>

    <div class="p-10 flex flex-col justify-center bg-white rounded-2xl shadow-xl border border-gray-100">
      <h4 class="text-3xl font-semibold mb-3 text-green-700">Login</h4>
      <p class="text-gray-600 mb-8 text-lg">Already a member? Welcome back âœ¨</p>
      <form autocomplete="off" action="/users/login" method="post" class="space-y-5">
        <input class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-400 transition" type="email" placeholder="Email" name="email" required>
        <input class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-400 transition" type="password" placeholder="Password" name="password" required>
        <button class="w-full bg-green-100 hover:bg-green-200 text-green-700 font-semibold py-3 rounded-xl shadow-md transition transform hover:scale-[1.02]">
          Login
        </button>
      </form>
    </div>

  </div>
</div>

<style>
  @keyframes fade-in-down {
    from {
      opacity: 0;
      transform: translate(-50%, -20px);
    }
    to {
      opacity: 1;
      transform: translate(-50%, 0);
    }
  }
  .animate-fade-in-down {
    animation: fade-in-down 0.5s ease-out forwards;
  }
</style>

<%- include('./partials/footer') %>